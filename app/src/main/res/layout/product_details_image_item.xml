<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="imgae"
            type="com.example.noteapp.model.ProductImage" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_imgae_item"
            android:layout_width="78.33dp"
            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6.67dp"
            android:contentDescription="@string/app_name"
            android:padding="2dp"
            android:background="@drawable/img_broder_gray"
            android:scaleType="fitXY"
            imageFromUrl="@{imgae.image}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</layout>